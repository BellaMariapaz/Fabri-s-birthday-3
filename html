    function mensaje() {
      for (let i = 0; i < 25; i++) {
        let spam = document.createElement('div');
        spam.innerHTML = 'üíó TE AMO üíó';
        spam.style.position = 'fixed';
        spam.style.left = Math.random() * 100 + 'vw';
        spam.style.top = Math.random() * 100 + 'vh';
        spam.style.fontSize = (20 + Math.random() * 25) + 'px';
        spam.style.color = '#ff006a';
        spam.style.fontFamily = 'Poppins';
        spam.style.fontWeight = '600';
        spam.style.animation = 'flotarSpam 2.5s ease-out';
        document.body.appendChild(spam);
        setTimeout(() => spam.remove(), 2500);
      }
    }

    @keyframes flotarSpam {
      0% { transform: scale(0.5); opacity: 0; }
      50% { opacity: 1; }
      100% { transform: scale(1.5) translateY(-40px); opacity: 0; }
    }

    // Corazoncitos aleatorios
